<!Doctype html>
<html>

<head>
    <title>Management Console</title>
    <link href='/css/style.css' rel='stylesheet' type='text/css' />
</head>

<body>
    <div class="fullcontainer">
        <div id="solidlinecontainer">
            <div id="solidline">
                <div id="bslogo"></div>
                <div id="title">
                    <b>
                    <p>Brightside Community Homes Foundation</p>
                    <p>Database Management Console</p>
                    </b>
                </div>
            </div>
        </div>
        <div>
            <div id="cpanel">
                <div id="cpanelin">
                    <p id="summary"><b>Summary</b></pid>
                    <p id="add"><b>Add Entry</b></p>
                </div>
            </div>
            <div id="infopanel">
                <div id="tablecontainer">
                    <table style="width:100%">
                        <thead style="background-color: #401e6c; color: white;">
                            <tr>
                                <th>Location</th>
                                <th>Organization</th>
                                <th>Description</th>
                                <th>Keywords</th>
                                <th>Contact</th>
                                <th>Website</th>
                                <th>Hours</th>
                                <th>Perks</th>
                                <th>Type</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each data}}
                                <tr id={{resourceId}}>
                                    <td>{{location}}</td>
                                    <td>{{organization}}</td>
                                    <td>{{description}}</td>
                                    <td>{{keywords}}</td>
                                    <td>{{phoneNumber}}</td>
                                    <td>{{website}}</td>
                                    <td>{{hours}}</td>
                                    <td>{{perks}}</td>
                                    <td>{{type}}</td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</body>

</html>